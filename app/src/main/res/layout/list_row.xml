<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/custom_shape"
                android:paddingBottom="@dimen/size_byte"
                android:paddingLeft="@dimen/size_word"
                android:paddingRight="@dimen/size_word"
                android:paddingTop="@dimen/size_byte">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/rowTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:gravity="left"
            android:padding="@dimen/size_half_byte"
            android:textSize="@dimen/size_text_primary"
            android:text="TITLE"
            android:textColor="#ff3349dc" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/rowDescription"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/rowTitle"
                android:layout_alignTop="@+id/imageHref"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="DESCRIPTION"
                android:padding="@dimen/size_half_byte"
                android:textSize="@dimen/size_text_secondary" />


            <ImageView
                android:id="@+id/imageHref"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/pactera"
                android:layout_alignParentRight="true"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>



